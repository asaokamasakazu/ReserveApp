<div class="sign-up">
  <div class="sign-up-container">

    <p class="sign-up-title">ログイン</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="sign-up-forms">

        <div class="sign-up-form-one">
          <P>必須</P>
          <div class="field sign-up-form-one">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス" %>
          </div>
        </div>

        <div class="sign-up-form-one">
          <P>必須</P>
          <div class="field sign-up-form-one">
            <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード" %>
          </div>
        </div>

      </div>

      <div class="sing-up-btn">
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      </div>

    <% end %>

    <div class="sign-in-a">
      <%= render "users/shared/links"%>
    </div>

  </div>
</div>